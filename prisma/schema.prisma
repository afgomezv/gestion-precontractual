// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Registros {
  id Int  @id @default(autoincrement())
  tipoDocumento String
  numeroDocumento String
  primerNombre String
  segundoNombre String
  primerApellido String
  segundoApellido  String
  celular String
  correo String
  fechaNacimiento String
  genero String
  estadoCivil String
  estadosProceso EstadosProcesos[]
  contractaciones Contractacion[]
}

model EstadosProcesos {
  id Int  @id @default(autoincrement())
  tecnico String
  juridico String
  financiero String
  supervision String
  employeeId Int
  employee Registros @relation(fields: [employeeId], references: [id])
}

model LoteContractacion {
  id Int @id @default(autoincrement())
  nombre String
  estado String
  descripcion String
  fechaInicial String
  fechaFinal String
  contractaciones Contractacion[]
  documentos Documentos[]
}

model Documentos {
  id Int @id @default(autoincrement())
  usar Boolean
  Solicitar Boolean
  requerido Boolean
  nombre String
  guardar String
  loteId Int
  loteContratacion LoteContractacion @relation(fields: [loteId], references: [id])
}

model Contractacion {
  contratistaId Int
  loteId Int
  contratista Registros @relation(fields: [contratistaId], references: [id])
  lote LoteContractacion @relation(fields: [loteId], references: [id])
  @@id([contratistaId, loteId])
}
